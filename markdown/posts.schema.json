{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://assets.hkamran.com/schema/projects",
    "title": "Projects",
    "description": "A list of projects for embedding",
    "type": "object",
    "properties": {
        "articles": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "allOf": [
                    {
                        "$ref": "#/$defs/post"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "imgAlt": {
                                "type": "string"
                            }
                        }
                    }
                ]
            }
        },
        "notes": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "$ref": "#/$defs/post"
            }
        }
    },
    "required": ["articles", "notes"],
    "$defs": {
        "date": {
            "anyOf": [
                {
                    "type": "string",
                    "format": "date"
                },
                {
                    "type": "string",
                    "format": "date-time"
                }
            ]
        },
        "post": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "The unique ID of the post, also the URL path"
                },
                "title": {
                    "type": "string",
                    "description": "The title of the post"
                },
                "description": {
                    "type": "string",
                    "description": "A short description of the post"
                },
                "tags": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "toc": {
                    "type": "boolean",
                    "description": "Whether the table of contents should be shown"
                },
                "oldNotice": {
                    "type": "boolean",
                    "description": "Whether the old post notice should be shown"
                },
                "published": {
                    "anyOf": [
                        {
                            "$ref": "#/$defs/date"
                        },
                        {
                            "const": ""
                        }
                    ]
                },
                "updated": {
                    "$ref": "#/$defs/date"
                },
                "filename": {
                    "type": "string",
                    "description": "The post's filename"
                },
                "branchName": {
                    "type": "string",
                    "description": "The name of the branch (if unpublished)"
                }
            },
            "required": [
                "id",
                "title",
                "description",
                "tags",
                "published",
                "filename"
            ]
        }
    }
}
